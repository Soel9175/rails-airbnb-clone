<h1>List of clothing items here</h1>



<div class="container">
  <%= link_to "Rent An Item!", new_item_path, class: "btn btn-primary" %>
</div>


<div class="container">
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-4">
        <div class="card-category my-3" style="background-image: url(<%= cocktail.photo.attached? ? (cl_image_path cocktail.photo.key) : (image_path("cocktail1.jpg")) %>), linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
            <%= link_to item.name, item_path(item) %>
            <%= link_to item.brand, item_path(item) %>
            <%= link_to item.price, item_path(item) %>
        </div>
      </div>
    <% end %>
  </div>
</div>












<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone Number</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phone_number %></td>
        <td><%= restaurant.category %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

