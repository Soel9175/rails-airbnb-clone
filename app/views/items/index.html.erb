<h1>List of clothing items here</h1>


<div class="container">
  <%= link_to "Rent An Item!", new_item_path, class: "btn btn-primary" %>
</div>


<div class="container">
  <div class="row" id="items">
    <% @items.each do |item| %>
      <%= link_to item_path(item) do %>
        <div class="col-4">
          <div class="card-category" style="background-image: url(<%= item.photo.attached? ? (cl_image_path item.photo.key) : (image_path("defaultdress.jpg")) %>), linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
            <div>
              <%= item.name %>
              <div class="d-flex flex-column justify-content-center text-center" style="background:white; color:black; font-size:24px;">
               <p> Brand: <%= item.brand %></p>
               <p> Price: Â£<%= item.price %></p>
              </div>
            </div>
        </div>
      <% end %>
      </div>     <%#= cl_image_tag item.photo.key %>
    <% end %>
  </div>
</div>









