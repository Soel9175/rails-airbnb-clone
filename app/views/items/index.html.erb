<%= render partial: "banner" %>

<div class="container" id="items">
  <h1 class="text-center mt-4 pt-4">Find your Cinderella Moment</h1>
  <hr>
  <div class="d-flex justify-content-center" id="filters">
      <div class="dropdown">
        <div class="filter-dropdown dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Type
        </div>
        <!-- Type Menu -->
        <div class="dropdown-menu pl-3 pb-0" aria-labelledby="dropdownMenuButton">
          <div class="checkbox">
            <label>
              <input type="checkbox" value="dresses">
                Dresses
            </label>
          </div>
          <div class="checkbox">
            <label>
              <input type="checkbox" value="suits">
                Suits
            </label>
          </div>
          <div class="checkbox">
            <label>
              <input type="checkbox" value="watches">
                Watches
            </label>
          </div>
          <div class="checkbox">
            <label>
              <input type="checkbox" value="shoes">
                Shoes
            </label>
          </div>
        </div>
      </div>
      <!-- Brand Menu -->
      <div class="dropdown">
        <div class="filter-dropdown dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Brand
        </div>
        <div class="dropdown-menu pl-3 pb-0" aria-labelledby="dropdownMenuButton">
          <div class="checkbox">
            <label>
              <input type="checkbox" value="armani">
                Armani
            </label>
          </div>
          <div class="checkbox">
            <label>
              <input type="checkbox" value="gucci">
                Gucci
            </label>
          </div>
          <div class="checkbox">
            <label>
              <input type="checkbox" value="dior">
                Dior
            </label>
          </div>
          <div class="checkbox">
            <label>
              <input type="checkbox" value="rolex">
                Rolex
            </label>
          </div>
          <div class="checkbox">
            <label>
              <input type="checkbox" value="zara">
                Zara
            </label>
          </div>
        </div>
      </div>
      <!-- Size Dropdown -->
      <div class="dropdown">
        <div class="filter-dropdown dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Size
        </div>
        <div class="dropdown-menu pl-3 pb-0" aria-labelledby="dropdownMenuButton">
          <div class="checkbox">
            <label>
              <input type="checkbox" value="extra_small">
                XS
            </label>
          </div>
          <div class="checkbox">
            <label>
              <input type="checkbox" value="small">
                S
            </label>
          </div>
          <div class="checkbox">
            <label>
              <input type="checkbox" value="medium">
                M
            </label>
          </div>
          <div class="checkbox">
            <label>
              <input type="checkbox" value="large">
                L
            </label>
          </div>
          <div class="checkbox">
            <label>
              <input type="checkbox" value="extra_large">
                XL
            </label>
          </div>
        </div>
      </div>
  </div>
  <div class="item-grid">
    <% @items.each do |item| %>
      <%= link_to item_path(item) do %>
          <div class="card-category item-card" style="background-image: url(<%= item.photo.attached? ? (cl_image_path item.photo.key) : (image_path("defaultdress.jpg")) %>), linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
            <div class="item-description py-2">
              <h2><%= item.name %></h2>
               <p class="brand"><%= item.brand %></p>
               <div class="btn btn-danger"> Rent for Â£<%= item.price %></div>
            </div>
          </div>
      <% end %>
    <% end %>
  </div>
</div>


<%= render partial: "footer" %>









